extends ../layout

block content
    a(href='/usuarios') Volver

    br
    br
    br

    h1 Nuevo Usuario

    br
    br

    form(action='/busuarios/create' method='post')
    .form-group 
        label(for='nombre') Nombre:
        input#nombre.form.control(type="text" name='nombre' value= usuario.nombre class=errors.nombre ? 'is-invaid:' : '')
        if errors.nombre
            small#nombreHelp.text-danger
                = errors.nombre.message
    .form-group 
        label(for='email') Email:
        input#email(type="text").form.control(type="text" name='email' value= usuario.email class=errors.email ? 'is-invaid:' : '')
        if errors.email
            small#emailHelp.text-danger
                = errors.email.message
    .form-group 
        label(for='pwd') Password:
        input#pwd.form.control(type="text" name='password' value= usuario.nombre class=errors.password ? 'is-invaid:' : '')
        if errors.password
            small#passwordHelp.text-danger
                = errors.password.message
    .form-group 
        label(for='confirm_pwd') Confirmar Password:
        input#confirm_pwd.form.control(type="text" name='password' value= usuario.nombre class=errors.confirm_password ? 'is-invaid:' : '')
        if errors.confirm_password
            small#confirm_passwordHelp.text-danger
                = errors.confirm_password.message 
    br
    br
    input.btn.btn-primary(type='submit' value='OK')